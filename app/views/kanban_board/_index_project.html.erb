<% tp = locals[:task_positions] %>
<% col= locals[:column] %>


<% if tp.column_id == col.id %>
	<!-- Buscamos la tarea, su padre y el usuario asociado a esta entrada de task_position -->
	<% task = tp.task %>
	<% father = task.project_or_parent%>
	<% responsable = task.user%>
	<%= render 'kanban_item', locals:{proyecto: father, responsable: responsable, task: task}%>
<% end -%>	
