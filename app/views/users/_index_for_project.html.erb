<div class="row">
  <div class="col-md-6">
    <h1>Usuarios de <%= @project.name %></h1>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @project.users.each do |u| %>
          <tr>
            <td><%= u.f_name %></td>
            <td><%= link_to 'Detalles', u %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Asignar este proyecto a un usuario', new_assignment_path(project_id: @project.id) %>
  </div>
</div>